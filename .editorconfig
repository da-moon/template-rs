root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# Rust files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# TOML files (Cargo.toml, etc.)
[*.toml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles require tabs
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# License files
[LICENSE*]
insert_final_newline = false

# Git config files
[.git*]
indent_style = space
indent_size = 2